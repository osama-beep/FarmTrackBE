# Stage di build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copia il progetto e le dipendenze
COPY ./FarmTrackBE/FarmTrackBE.csproj ./FarmTrackBE/
WORKDIR /src/FarmTrackBE
RUN dotnet restore

# Fase di pubblicazione
RUN dotnet publish FarmTrackBE.csproj -c Release -o /app/publish

# Stage finale per l'immagine
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=build /app/publish ./

ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "FarmTrackBE.dll"]
